<% if(!currentUser) {%>
  <% layout('layouts/boilerplate')%>
  <% } else {%>
    <% layout('layouts/boilerlogin')%>
    <% } %>
<style>
    body {
      background-color: black;
    }
  .card{
    background: radial-gradient(circle at 10% 20%, rgb(87, 108, 117) 0%, rgb(37, 50, 55) 100.2%);
    margin:5px;
  }
  .card-header{
    background-color:black;
  }
    #profile {
            height: 44px;
            text-align: center;
            color:white;
          }
          p{
            color: white;
          }
    </style>
    
    <div class="card mb-5">
        <div id="profile" class="card-header align-text-center">
            <h4>PROFILE</h4>
        </div>
        <div style="text-align: justify;" class="card-body align-text-center col-8 mt-4 ms-5">
            <p><b>Name:</b> <%= user.username %> </p>
            <p><b>Registration ID:</b> <%= user._id %> </p>
            <p><b>Email:</b> <%= user.email %> </p>
            <p><b>Gender:</b> <%= user.Gender %> </p>
            <p><b>DanceForm:</b> <%= user.danceForm %> </p>
            <p><b>DAY:</b> <%= user.day %> </p>
            <p><b>Slot:</b> <%= user.slot %> </p>
            <p><b>Events:</b> <%= user.Events.length %> </p>
            <p><b>Memories:</b> <%= user.Memories.length %> </p>

        </div>
    </div>


  